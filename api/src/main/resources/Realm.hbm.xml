<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.intalio.tempo.security.database.model.Realm" table="security_realm" >
        <id name="id" type="int">
            <column name="realm_id" />
            <generator class="native" />
        </id>
        <property name="identifier" type="string">
            <column name="identifier" length="100" not-null="true" unique="true" />
        </property>
        <set name="users" inverse="true">
            <key>
                <column name="realm_id" not-null="true" />
            </key>
            <one-to-many class="org.intalio.tempo.security.database.model.User" />
        </set>
        <set name="roles" inverse="true">
            <key>
                <column name="realm_id" not-null="true" />
            </key>
            <one-to-many class="org.intalio.tempo.security.database.model.Role" />
        </set>
    </class>
</hibernate-mapping>
